    <div class="counter">
        <button style="background-color: blue;color: white;" onclick="changecolors1()" 
        type="button" class="blue">Blue color
        </button>
        <button style="background-color: black;color: white;" onclick="changecolors2()"
         type="button" class="blue">Blue color
        </button>
        <button style="background-color: green;color: white;" onclick="changecolors3()"
         type="button" class="blue">Blue color
        </button>
        <button style="background-color: yellow;color: white;" onclick="changecolors4()"
         type="button" class="blue">Blue color
        </button>
    </div>
    <script>
     var index=0;
     function changecolors1(){
        var color=["blue","white"]
        document.getElementsByTagName("body")[0].
         style.background=color[index++]
      }
      function changecolors2(){
        var color=["black","white"]
        document.getElementsByTagName("body")[0].
         style.background=color[index++]
      }
      function changecolors3(){
        var color=["green","white"]
        document.getElementsByTagName("body")[0].
         style.background=color[index++]
      }
      function changecolors4(){
        var color=["yellow","white"]
        document.getElementsByTagName("body")[0].
         style.background=color[index++]
      }


    </script>
